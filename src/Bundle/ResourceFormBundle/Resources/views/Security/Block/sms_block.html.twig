{% trans_default_domain 'MMCResourceFormBundle' %}

{% block mmc_user_content %}
        <br>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('mmc_user.resource_form.code', { 'type': type }) }}" method="POST">
            {{ form_widget(form._token) }}
            <div class="form-group has-feedback">
                {{ form_widget(form.sms, {'attr': {'class': 'form-control' , 'placeholder' : 'placeholder.phone'|trans }}) }}
                {{ form_errors(form.sms) }}
                <span class="glyphicon glyphicon-earphone form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" id="_submit_email" name="_submit_email" class="btn btn-warning btn-block btn-flat">{{ 'security.email.submit'|trans }}</button>
                </div>

                {% if back is defined %}
                    <div class="col-md-6">
                        <a href={{ path('mmc_user.login') }} class="btn btn-default btn-block btn-flat">{{ 'btn.return'|trans }}</a>
                    </div>
                {% endif %}
            </div>
        </form>

{% endblock mmc_user_content %}