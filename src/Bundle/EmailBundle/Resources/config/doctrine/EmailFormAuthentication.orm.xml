<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="MMC\User\Bundle\EmailBundle\Entity\EmailFormAuthentication">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="email" column="email" type="string" unique="true" />

        <field name="isChecked" column="is_checked" type="boolean" />

        <field name="code" column="code" type="string" nullable="true" />

        <one-to-one field="user" target-entity="MMC\User\Bundle\UserBundle\Entity\User">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>

    </mapped-superclass> 
                                                                                                   
</doctrine-mapping>
